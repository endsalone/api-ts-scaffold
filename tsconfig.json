{
	"compilerOptions": {
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
        "experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"outDir": "dist",
		"paths": {
			"config/*": ["config/*"],
			"adapters/*": ["adapters/*"],
			"application/*": ["application/*"],
			"core/*": ["core/*"],
			"commons/*": ["commons/*"],
			"ports/*": ["ports/*"]
		},
		"removeComments": true,
		"rootDirs": ["src"],
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "es2017",
		"useDefineForClassFields": false,
	},
	"exclude": [
		"node_modules",
		"spec",
		"spec/**/*.spec.ts",
		"dist",
		".git"
	],
 }
